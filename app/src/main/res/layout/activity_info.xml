<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeaa4"
    android:orientation="vertical"
    tools:context=".InfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/arrow_left"/>

        <ImageView
            android:layout_width="240dp"
            android:layout_height="178dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ilustrasi_admin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informasi Tuberkulosis"
            android:textSize="18sp"
            android:textColor="#243C60"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="440dp"
        android:layout_height="548dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/cvbg"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#B0E5F6"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon_info1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengenalan Umum"
                android:textColor="#132743"
                android:textSize="16sp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Membahas tentang apa itu TBC"
                android:textColor="#132743"
                android:textSize="10sp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="35dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#B0F5F1"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon_info2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gejala TBC"
                android:textColor="#132743"
                android:textSize="16sp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Membahas tentang gejala yang dialami pasien"
                android:textColor="#132743"
                android:textSize="10sp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="35dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FBE8C0"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon_info3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengobatan"
                android:textColor="#132743"
                android:textSize="16sp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Membahas tentang pengobatan TBC"
                android:textColor="#132743"
                android:textSize="10sp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="35dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#F4B1BE"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon_info4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pencegahan"
                android:textColor="#132743"
                android:textSize="16sp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Membahas tentang pencegahan yang dapat dilakukan"
                android:textColor="#132743"
                android:textSize="10sp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="35dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardBackgroundColor="#B0F5F1"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/icon_info5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data"
                android:textColor="#132743"
                android:textSize="16sp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menampilkan data - data seperti jumlah faskes, jumlah kasus TBC, rumah tidak sehat, kepadatan penduduk tiap kecamatan"
                android:textColor="#132743"
                android:textSize="10sp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="35dp"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</LinearLayout>